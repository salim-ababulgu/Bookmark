{
  "manifest_version": 3,
  "name": "BookmarkApp Extension",
  "version": "1.0.0",
  "description": "Ajoutez facilement des favoris à BookmarkApp depuis n'importe quelle page web",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:5174/*",
    "https://localhost:5174/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Ajouter à BookmarkApp",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}